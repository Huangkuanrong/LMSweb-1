@model LMSweb.ViewModel.CourseViewModel

@{
    Layout = "~/Views/Shared/_CoursesLayout.cshtml";
}

<body>
    <div class="article">

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="https://localhost:44301/Course/StudentManagement?CID=C001">修課名單</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="https://localhost:44301/Course/StudentGroup?CID=C001">分組名單</a>
            </li>

        </ul>
        <br />
        @*onclick="myFunction()*@

        <div class="row">
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        未分組名單
                    </div>
                    <div class="card-body">
                        <div class="form-check form-check-inline">

                            <label class="form-check-label" for="inlineCheckbox1">
                               
                                @foreach (var item in Model.students)
                                {
                                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="stuName" value="@Html.DisplayFor(modelItem => item.SID)">@Html.DisplayFor(modelItem => item.SID)@Html.DisplayFor(modelItem => item.SName)
                                    <br />
                                }
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        已分組名單
                    </div>
                    <div class="card-body">
                        <p id="gname"></p>
                        <p id="text"></p><p id="stu"><br/></p>  
                    </div>
                </div>
            </div>
        </div>
    </div>

    <button class="btn btn-primary" id="btn">新增組別</button>
    
</body>

<script type="text/javascript" src="../jquery/jquery.js"></script>
<script type="text/javascript" src="../jquery/jquery-ui.js"></script>
@section scripts {
    <script type="text/javascript"></script>
    <script>
        document.getElementById('btn').onclick = function () {
            var markedCheckbox = document.getElementsByName('stuName');
            for (var checkbox of markedCheckbox) {
                if (checkbox.checked) {
                    document.getElementById("stu").append(checkbox.value + ' ');
                }
            }
            var x = document.createElement("INPUT");
            x.setAttribute("type", "text");
            x.setAttribute("value", "請輸入組別名稱");
            document.getElementById("gname").appendChild(x);
            var str = '小組成員 : ';
            document.getElementById("text").innerHTML = str;

            var h = document.createElement("HR");
            document.body.appendChild(h);
        }
