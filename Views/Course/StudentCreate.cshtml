@model LMSweb.Models.Student

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";

}
<div class="article">
    <h4><b>新增學生</b></h4>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4><b>新增學生</b></h4>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.SName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-5">
                    @Html.EditorFor(model => model.SName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                學生帳號
                <div class="col-5">
                    @Html.EditorFor(model => model.SID, new { htmlAttributes = new { @class = "form-control", @Value = "S" + DateTime.Now.ToString("HHmmss") } })
                    @Html.ValidationMessageFor(model => model.SID, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <div class="col-5">
                    @Html.HiddenFor(model => model.SPassword, new { @class = "form-control", @Value = "S" + DateTime.Now.ToString("HHmmss") })
                    @Html.ValidationMessageFor(model => model.SPassword, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Sex, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-5">
                    <select class="form-select" id="Sex" name="Sex">
                        <option selected>請選擇性別...</option>
                        <option value="男">男</option>
                        <option value="女">女</option>
                    </select>
                    @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="mb-3">
                <input type="submit" value="送出" class="btn btn-primary" />
                <input type="button" value="取消" class="btn btn-secondary" onclick="location.href='@Url.Action("StudentManagement", "Course", new { cid = Model.CID})'" />
            </div>
        </div>
    }
</div>
