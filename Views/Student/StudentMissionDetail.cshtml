@model LMSweb.ViewModel.MissionViewModel
@{
    ViewBag.Title = "StudentMissionDetail";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        /*margin: 10px auto;*/
    }

        table tr {
            border-bottom: solid 2px #F0F0F2;
        }

    th {
        background-color: cadetblue;
        color: #F0F0F2;
        text-align: center;
        padding: 10px 0;
        width: 50%;
    }

    td {
        padding: 10px 10px;
    }

    .MissionDetailArticle {
        position: relative;
        display: block;
        box-sizing: border-box;
        width: 100%;
        max-width: 1200px;
        margin: 20px auto 20px;
        padding: 30px 0px 50px 70px;
        border-radius: 5px;
        background: #F0F0F2;
        border: 1px solid #dee2e6;
        border-color: #cdcdcd;
    }

    .message-btn {
        position: fixed;
        width: 100px;
        height: 100px;
        right: 50px;
        bottom: 50px;
    }
</style>
<div class="cardArticle">
    <h4>@Model.CName</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("StudentMission","Student",new { CID = Model.CID})">任務列表</a></li>
            <li class="breadcrumb-item active" aria-current="page">任務內容</li>
        </ol>
    </nav>
</div>
<div class="MissionDetailArticle">
    <div class="mb-3">
        <h5><b>@Html.DisplayFor(model => model.mis.MName)</b></h5>
    </div>
    <div class="mb-3">

        @if (Model.mis.IsGoalSetting)
        {
            @Html.ActionLink("目標設置", "StudentGoalSetting", "Student", new { MID = Model.MID, CID = Model.CID }, new { @class = "btn btn-primary", @id = "goal_btn" })
        }
        @if (Model.mis.IsDiscuss)
        {
            @Html.ActionLink("討論區", "Chat", "Student", new { MID = Model.MID, CID = Model.CID }, new { @class = "btn btn-primary", @id = "dicsuss_btn" })
        }
        @if (Model.mis.IsDrawing)
        {
            @Html.ActionLink("流程圖", "StudentDrawing", "Student", new { mid = Model.MID, cid = Model.CID }, new { @class = "btn btn-primary", @id = "drawing_btn" })
        }
        @if (Model.mis.IsCoding)
        {
            @Html.ActionLink("程式碼", "StudentCoding", "Student", new { MID = Model.MID, CID = Model.CID }, new { @class = "btn btn-primary", @id = "coding_btn" })
        }
        @if (Model.mis.IsAssess)
        {
            @Html.ActionLink("自評與互評", "Index", "PeerAssessments", new { SID = Model.SID, MID = Model.MID, CID = Model.CID }, new { @class = "btn btn-primary", @id = "assess_btn" })
        }
        @if (Model.mis.IsReflect)
        {
            @Html.ActionLink("自我反思", "StudentReflection", "Student", new { MID = Model.MID, CID = Model.CID }, new { @class = "btn btn-primary", @id = "reflec_btn" })
        }
        @Html.ActionLink("組間互評", "GroupEvalution", "PeerAssessments", new { GID = Model.GID,SID = Model.SID, MID = Model.MID, CID = Model.CID }, new { @class = "btn btn-primary", @id = "gassess_btn" })

    </div>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mis.course.CName)
            </th>
            <td>
                @Html.DisplayFor(model => model.mis.course.CName)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mis.Start)
            </th>
            <td>
                @Html.DisplayFor(model => model.mis.Start)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mis.End)
            </th>
            <td>
                @Html.DisplayFor(model => model.mis.End)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mis.MName)
            </th>
            <td>
                @Html.DisplayFor(model => model.mis.MName)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mis.MDetail)
            </th>
            <td>
                @Html.DisplayFor(model => model.mis.MDetail)
            </td>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mis.relatedKP)
            </th>
            <td>
                @foreach (var kp in Model.KContents)
                {
                    @kp
                    <br>
                }
            </td>
        </tr>
    </table>
</div>

<!-- 懸浮聊天室 -->
<body>
   @if (Model.mis.IsDiscuss)
    {
    <button type="button" class="btn btn-primary rounded-circle message-btn" data-bs-toggle="offcanvas"
            data-bs-target="#messageBox" aria-controls="messageBox">
        討論區
    </button>
    }
    <div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="messageBox" aria-labelledby="messageBoxLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="messageBoxLabel">聊天室</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <iframe src="@Url.Action("Chat","Student",new { MID = @Model.MID, CID = @Model.CID})" width="365" height="830" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>

    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
