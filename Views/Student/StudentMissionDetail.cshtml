@model LMSweb.ViewModel.MissionViewModel
@{
    ViewBag.Title = "StudentMissionDetail";

    // 這是給陣列用的
    int k = 0;

    // 這邊目前是測試用資料
    int TestType = 5;// Model.mis.Course.TestType;
    string GuideString = "000000";
}

@section NavPills {
    <ul class="nav nav-pills me-auto ms-3">
        @AllHelper.SetUnActiveNavData(Url.Action("StudentMission", "Student", new { CID = Model.CID }), "任務列表")
    </ul>
}
<div class="container">

    @AllHelper.CouresTitleForTeacherView(Model.CName, 5)

    <div class="row m-3" style="min-height: 80vh">
        <div class="col card me-2 p-3 bg-white">
            <div class="shadow-sm">
                <h3 class="text-center mt-2 pt-1">任務進度</h3>

                <div id="stepper4" class="bs-stepper vertical">
                    <div class="bs-stepper-header w-100 pb-3" role="tablist">

                        @switch (TestType)
                        {
                            case 0:
                                // 控制組
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", GuideString, k++)
                                break;
                            case 1:
                                // 實驗組一：自我調節
                                @MissionsHelper.GetTaskGuideStapString("目標設置", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("自我反思", GuideString, k++)
                                break;
                            case 2:
                                // 實驗組二：同儕互評
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("同儕互評", GuideString, k++)
                                break;
                            case 3:
                                // 實驗組三：社會共享調節
                                @MissionsHelper.GetTaskGuideStapString("目標設置", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("團隊反思", GuideString, k++)
                                break;
                            case 4:
                                // 實驗組四：互動式同儕互評
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("同儕互評", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("評價回饋", GuideString, k++)
                                break;
                            case 5:
                                // 實驗組五：社會共享調節 & 互動式同儕互評
                                @MissionsHelper.GetTaskGuideStapString("目標設置", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("同儕互評", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("評價回饋", GuideString, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("團隊反思", GuideString, k++)
                                break;
                            default:
                                break;
                        }

                    </div>
                </div>
            </div>
        </div>
        <div class="col-10 card p-3 bg-white">
            <div class="mx-3 mt-2">
                <div class="row mb-3">
                    <div class="col my-auto">
                        <h3 class="h-auto">@Model.CName</h3>
                    </div>
                </div>

                <div class="row gx-2 gy-3">
                    @MissionsHelper.GetDetailDataListGroupTemplate(
                        Html.DisplayNameFor(model => model.mis.MDetail),
                        Html.DisplayFor(model => model.mis.MDetail), 300)

                    @MissionsHelper.GetDetailDataListGroupTemplate(
                        Html.DisplayNameFor(model => model.mis.Start),
                        Html.DisplayFor(model => model.mis.Start))

                    @MissionsHelper.GetDetailDataListGroupTemplate(
                        Html.DisplayNameFor(model => model.mis.End),
                        Html.DisplayFor(model => model.mis.End))

                </div>
            </div>
        </div>
    </div>
</div>







