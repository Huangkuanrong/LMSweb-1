@model LMSweb.ViewModel.GoalSettingViewModel
@{
    ViewBag.Title = "StudentReflection";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<div class="cardArticle">
    <h4>@Model.CName</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("StudentMission","Student",new { CID = Model.CID})">任務列表</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("StudentMissionDetail", "Student", new { cid = Model.CID,mid = Model.MID})">任務內容</a></li>
            <li class="breadcrumb-item active" aria-current="page">自我反思</li>
        </ol>
    </nav>
</div>
<div class="article">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h5>自我反思</h5>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CID)
            @Html.HiddenFor(model => model.MID)
            <table id="table_id" class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Questions.First().Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Questions.First().Options)
                        </th>
                    </tr>
                </thead>
                <tbody id="number">

                    @foreach (var Q in Model.Questions)
                    {
                        <tr>
                            <td>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Q.Description)
                            </td>
                            <td>
                                @if (Q.Type == "單選")
                                {
                                    foreach (var qo in Q.Options)
                                    {

                                        
                                        @Html.RadioButton(Q.QID.ToString(), qo.OptionName, new { @class = "form-check-input" })
                                        @Html.Label(qo.OptionName, new { @class = "form-check-label", @for = Q.QID })

                                    }
                                }
                                else if (Q.Type == "多選")
                                {
                                    foreach (var qo in Q.Options)
                                    {
                                        
                                       
                                        @Html.CheckBox(Q.QID.ToString(), new { @class = "form-check-input", @value = qo.OptionName })
                                        @Html.Label(qo.OptionName, new { @class = "form-check-label" })

                                    }
                                }
                                else
                                {
                                    @Html.TextArea(Q.QID.ToString(), new { @class = "form-control", @rows = "3" })
                                }
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            <div class="mb-3">
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirmModal">送出</button>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">送出確認</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            送出後無法做修改，確定要送出嗎?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">再想想</button>
                            <input type="submit" value="送出" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
@section scripts
{
    <script>
        var questions_qid = @Html.Raw(@Json.Encode(Model.Questions.Select(q => q.QID).ToList()));
        window.onload = function () {
            var tableLine = document.getElementById("number");
            for (var i = 0; i < tableLine.rows.length; i++) {
                tableLine.rows[i].cells[0].innerHTML = (i + 1);

            }
        }
        $("form").submit(function () {
            var sumbit_data = {};
            sumbit_data["CID"] = "@Model.CID";
            sumbit_data["MID"] = "@Model.MID";
            sumbit_data["QRs"] = [];
            for (var i = 0; i < questions_qid.length; i++) {
                var Question_Response = {};
                var type = $('input[name="' + questions_qid[i] + '"]').attr('type');
                //console.log(questions_qid[i]);
                response = "";
                if (type == "radio") {
                    response = $('input[name="' + questions_qid[i] + '"]:checked').map(function () {
                        return $(this).val();
                    }).get().join();
                } else if (type == "checkbox") {
                    response = $('input[name="' + questions_qid[i] + '"]:checked').map(function () {
                        return $(this).val();
                    }).get().join();
                } else {
                    selector = $('textarea[name="' + questions_qid[i] + '"]');
                    response = selector.val();
                }
                //console.log(response);
                Question_Response["qid"] = questions_qid[i];
                Question_Response["response"] = response;
                sumbit_data["QRs"].push(Question_Response);
            }
            console.log(sumbit_data);
            $.ajax({
                url: '@Url.Action("StudentGoalSetting")',
                type: 'post',
                dataType: 'json',
                data: sumbit_data,
                success: function (response) {
                    // ... do something with the data...
                    window.location.href = response.redirectToUrl;

                }
            });
            return false;
        });
    </script>
}