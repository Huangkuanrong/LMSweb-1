@model LMSweb.ViewModel.MissionViewModel
@{
    ViewBag.Title = "StudentMission";
}

@section NavPills {
    <ul class="nav nav-pills me-auto ms-3">
        <li class="nav-item">
            <a class="text-white nav-link" aria-current="page" href="@Url.Action("StudentMission","Student",new { CID = Model.CID})">任務列表</a>
        </li>
    </ul>
}
<div class="container">
    <div class="card m-3 p-4">
        <h4>@Model.CName</h4>
        @*<nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">任務列表</li>
                </ol>
            </nav>*@
    </div>
    <div class="card m-3 p-4">
        <h5>任務列表</h5>
        @if (Model.missions == null || Model.missions.Count() == 0)
        {
            <p>目前還沒有任務哦~</p>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model.missions)
                {
                    <div class="card col-3 m-3 p-4" style="min-height: 100px">
                        <h5 class="card-title">@item.MName</h5>
                        <p class="card-text overflow-hidden" style="height: 100px">@item.MDetail</p>
                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("StudentMissionDetail","Student", new {sid = Model.SID, mid = item.MID, cid = item.CID, gid = Model.GID})'">
                            進入任務<i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                }
            </div>
        }
    </div>

</div>
@section scripts
{
    <script>
        window.onload = function () {
            var tableLine = document.getElementById("number");
            for (var i = 0; i < tableLine.rows.length; i++) {
                tableLine.rows[i].cells[0].innerHTML = (i + 1);
            }
        }
    </script>

}
