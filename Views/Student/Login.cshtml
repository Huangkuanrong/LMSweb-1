@model LMSweb.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section header {
    @Html.Partial("../Shared/Header/HeaderNavbar")
}

@using (Html.BeginForm("Login", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row mt-5 pb-5">
            <div class="col-4 col-md-4 col-lg-4 mx-auto">
                <div class="card col-10" style="border-radius: 15px;">
                    <h4 class="card-header py-3 px-4">學生登入</h4>
                    <div class="card-body py-3 px-4">
                        <div class="mb-3">
                            學號
                            <div class="col">
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="mb-3">
                            密碼
                            <div class="col">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <br />
                        <div class="row">
                            <div class="col-6">
                                <input type="submit" value="登入" class="btn btn-primary w-100" />
                            </div>
                            <div class="col-6">
                                <input type="button" class="btn btn-secondary w-100" value="取消" onclick="location.href='@Url.Action("Index", "Home")'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
