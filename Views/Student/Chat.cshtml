@model LMSweb.ViewModel.MissionViewModel
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<body>
    <h2>Chat</h2>
    <div class="container">
        <input type="text" id="message" />
        <input type="button" id="sendmessage" value="Send" />
        <input type="hidden" id="displayname"/>
        <input type="hidden" id="mid" value="@Model.MID"/>
        
        <ul id="discussion"></ul>
    </div>
</body>

<script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>

<script src="~/signalr/hubs"></script>

@section scripts {
    <script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $(function () {
            var chat = $.connection.charHub;
            var today = new Date(); var currentDateTime = today.getFullYear() + '/' + (today.getMonth() + 1) + '/' + today.getDate() + '/' + today.getHours() + ':' + today.getMinutes();
            //let url = 'https://localhost:44301/api/test/live';
            chat.client.addNewMessageToPage = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name)
                    + '</strong>: ' + htmlEncode(message) + '</li>');
            };
            
            $('#displayname').val(@Model.SID);
            $('#message').focus();
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    chat.server.send($('#displayname').val(), $('#message').val());
                    fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            ActionType: "D",
                            subAction: "R",
                            Detail: $('#message').val(),
                            Time: currentDateTime,
                            SID: "@Model.SID",
                            MID: $('#mid').val()
                        })

                    }).then((response) => {
                        return response.json();
                    }).then((jsonData) => {
                        console.log(jsonData);
                    }).catch((err) => {
                        console.log('錯誤:', err);
                    })
                    
                    $('#message').val('').focus();
                });
            });
        });
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}


