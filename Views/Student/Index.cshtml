@model IEnumerable<LMSweb.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CoursesLayout.cshtml";
}

<h2>學生名單</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <button class="btn btn-primary" data-toggle="modal" data-target="#UploadModal">
        匯入檔案
    </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SPassword)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sex)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SPassword)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sex)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Score)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { sid = item.SID, cid = item.CID }) |
            @Html.ActionLink("Details", "Details", new { sid = item.SID, cid = item.CID }) |
            @Html.ActionLink("Delete", "Delete", new { sid = item.SID, cid = item.CID })
        </td>
    </tr>
}

</table>

@Html.Partial("_UploadFile")

@section scripts
{
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        var actionUrls = {
            Upload: '@Url.Action("Upload", "Student")',
            Upload: '@Url.Action("Import", "Student")'
        };
        project.Student.Initialize(actionUrls);
    });
    </script>
    }