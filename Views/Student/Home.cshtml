@model LMSweb.ViewModel.StudentHomePageViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@section header {
    @Html.Partial("../Shared/Header/HeaderNavbar")
}*@

<div class="container">
    <div class="card m-3 p-3">
        <div class="row m-2">
            <p class="col flex-shrink-1 w-auto fs-2 my-auto">課程資訊</p>
        </div>
    </div>

    <div class="card m-3 bg-white">
        <table class="table table-striped">
            <thead>
                <tr class="row m-3">
                    <th class="col-1">#</th>
                    <th class="col-2">
                        課程名稱
                    </th>
                    <th class="col-2">
                        授課老師
                    </th>
                    <th class="col-2">
                        組名
                    </th>
                    <th class="col-2">
                        組員
                    </th>
                </tr>
            </thead>
            <tbody id="number">
                <tr class="row mx-3 my-1">
                    <td class="col-1"></td>
                    <td class="col-2">
                        @Html.DisplayFor(model => model.CName)
                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(model => model.TName)
                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(model => model.GName)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </td>
                    <td class="col-2">
                        @if (Model.Groups != null)
                        {
                            foreach (var item in Model.Groups)
                            {
                                foreach (var s in item.Students)
                                {
                                    if (s.group.GID == item.GID)
                                    {
                                        @s.SName
                                        <br />
                                    }
                                }
                            }
                        }
                    </td>
                    <td class="col flex-shrink-1">
                        @if (Model.Enter)
                        {
                            <div class="d-grid gap-2 d-md-flex justify-content-end">
                                <button type="button" class=" btn btn-primary" onclick="location.href='@Url.Action("StudentMission", "Student", new { cid = Model.CID })'">
                                    進入我的課程
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
                                    </svg>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div class="d-grid gap-2 d-md-flex justify-content-end">
                                <button type="button" class=" btn btn-secondary" disabled="disabled" onclick="location.href='@Url.Action("StudentMission", "Student", new { cid = Model.CID })'">
                                    進入我的課程
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z" />
                                    </svg>
                                </button>
                            </div>
                        }
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section scripts
{
    <script>
        window.onload = function () {
            var tableLine = document.getElementById("number");
            for (var i = 0; i < tableLine.rows.length; i++) {
                tableLine.rows[i].cells[0].innerHTML = (i + 1);
            }
        }
    </script>
}