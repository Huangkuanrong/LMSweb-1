@model IEnumerable<LMSweb.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.course.CName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mission.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.course.CName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mission.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.QID }) |
            @Html.ActionLink("Details", "Details", new { id=item.QID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.QID })
        </td>
    </tr>
}

</table>
