        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top'
                }
            },
            title: {
                display: true,
                fontSize: 24,
                text: '小組成果'
            },
            scales: {
                xAxes: [{
                    ticks: {
                        fontSize: 18
                    },
                }],
                yAxes: [{
                    ticks: {
                        beginAtZero: true,
                        fontSize: 14
                    },
                }]
            }
        }
    });
</script>

