                        selfContributeCount++;
                    }

                }

            }
            foreach (var i in Model.GPeerER)//同儕互評 小組平均
            {
                if (item.SID == i.SID)
                {
                    if (i.DQID == 20)
                    {
                        var answer = Convert.ToInt32(i.Answer);
                        peerDiscuss = peerDiscuss + answer;
                        peerDiscussCount++;
                    }
                    if (i.DQID == 21)
                    {
                        var answer = Convert.ToInt32(i.Answer);
                        peerDraw = peerDraw + answer;
                        peerDrawCount++;
                    }
                    if (i.DQID == 22)
