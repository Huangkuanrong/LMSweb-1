<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LMSWeb2.0</title>

    <link href="~/Content/MyCSS/mainStyle.css" rel="stylesheet" />

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/jasny-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bs-stepper/dist/css/bs-stepper.min.css" />
    
    @RenderSection("topCSS", required: false)
    @RenderSection("topJS", required: false)
</head>
<body>
    <header id="header">
        @*@RenderSection("header", required: false)*@
        <nav class="navbar navbar-expand-lg navbar-light text-white">
            <div class="container">

                @if (User.IsInRole("Student") == true)
                {
                    <a class="text-light text-decoration-none h3 my-auto" href="@Url.Action("Home", "Student")">
                        LMSWeb 2.0
                    </a>
                }
                else
                {
                    <a class="text-light text-decoration-none h3 my-auto" href="@Url.Action("Home", "Teacher")">
                        LMSWeb 2.0
                    </a>
                }

                @RenderSection("NavPills", required: false)

                <ul class="navbar-nav text-light">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </nav>
    </header>

    <main id="main">
        @RenderBody()
    </main>

    <footer class="w-100">
        <div class="container d-flex flex-wrap text-white">
            <p class="d-block">&copy; @DateTime.Now.Year</p>
            <p class="ms-auto d-block">結合社會共享調節與互動式同儕互評的程式設計合作學習環境</p>
        </div>
    </footer>

    @*
        目前所有頁面都使用同一個 footer
        Nick Lu
    *@


    @* 舊版 *@
    @*<script src="~/Scripts/jquery-3.6.0.min.js"></script>*@
    @*<script src="~/Scripts/jasny-bootstrap.min.js"></script>*@

    @* 怪怪的東西 *@
