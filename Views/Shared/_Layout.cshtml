            </ul>
        </div>
    </nav>

    @RenderBody()

    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year </p>
        </div>
    </footer>


    <script src="~/Scripts/jquery-3.6.4.min.js"></script>
    @*<script src="~/Scripts/popper.min.js"></script>*@
