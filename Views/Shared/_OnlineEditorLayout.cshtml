        .article {
            position: relative;
            display: block;
            box-sizing: border-box;
            width: 100%;
            max-width: 1200px;
            margin: 20px auto 20px;
            padding: 30px 50px 50px;
            border-radius: 5px;
            background: #F0F0F2;
            border: 1px solid #dee2e6;
            border-color: #cdcdcd;
        }

        .body {
            background-color: #f8f8f8
        }

