@model LMSweb.ViewModel.GroupViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="cardArticle">
    <h4>@Model.CName</h4>
    <h4>@Model.SID</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="https://localhost:44301/Student/StudentMission?CID=@Model.CID">任務列表</a></li>
            <li class="breadcrumb-item"><a href="https://localhost:44301/Student/StudentMissionDetail?mid=@Model.MID&cid=@Model.CID">任務內容</a></li>
            <li class="breadcrumb-item active" aria-current="page">自評與互評</li>

        </ol>
    </nav>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="article">
        <table class="table">
            <h5>
                @Html.ActionLink("自我評價", "StudentSelfEvalution", "Student", new { sid = Model.SID, mid = Model.MID, gid = Model.GID }, new { @class = "" })
            </h5>
            <thead>
                <tr>
                    <h5>同儕互評</h5>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Groups)
                {
                    <tr>
                        <td>
                            @foreach (var s in item.Students)
                            {
                                if (s.group.GID == item.GID && s.SID != Model.SID)
                                {
                                    <h5>@Model.SID</h5>
                                    @*<h5>@s.SID</h5>*@
                                    @Html.ActionLink(s.SName, "StudentPeerEvalution", "Student", new { sid = s.SID, mid = Model.MID, gid = Model.GID }, new { @class = "" })
                                    <br />
                                }
                            }
                        </td>
                        @*<td>
                            @foreach (var s in item.Students)
                            {
                                if (Model.PeerAssessment != null && s.SID == Model.PeerAssessment.AssessedSID)
                                {
                                    @Model.PeerAssessment.PeerA
                                }
                                <br />
                            }
                        </td>
                        <td>
                            @foreach (var s in item.Students)
                            {
                                @Html.ActionLink("評分", "GroupJourney", "LearningBehaviors", new { sid = s.SID, mid = Model.MID, gid = Model.GID }, new { @class = "" })
                                <br />
                            }
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
      
    </div>
}
