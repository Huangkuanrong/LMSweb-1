@model LMSweb.ViewModel.GroupViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="article">
        <div class="form-horizontal">
            <h4><b>自評與互評</b></h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="mb-3">
                @Html.LabelFor(model => model.PeerAssessment.PeerA, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-5">
                    @Html.EditorFor(model => model.PeerAssessment.PeerA, new { htmlAttributes = new { @class = "form-control" } })
