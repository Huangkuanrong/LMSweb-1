@model IEnumerable<LMSweb.Models.Course>

@{
    ViewBag.Title = "Index";
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cardArticle row mx-auto mt-3">
    <p class="w-auto h-auto fs-5 my-auto">課程列表</p>
    <div class="w-auto ms-auto">
        <button class="btn btn-primary fs-5 row d-flex" onclick="location.href='@Url.Action("CourseCreate", "Teacher")'">
            <span class="bi bi-plus-lg"> 新增課程</span>
        </button>
    </div>
    
</div>
<div class="article">
    
    <div class="row row-cols-1 row-cols-md-4 mb-4 text-center">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card mb-3 shadow-sm" style="border-radius: 15px; ">
                    <div class="card-body">
                        <div class="card-title pricing-card-title text-center" style="padding: 30px 20px 30px;">
                            <h3 class="">@Html.DisplayFor(modelItem => item.CName, new { @class = "fw-bold" })</h3>                     
                        </div>
                        <p class="h6" style="bottom">ID : @Html.DisplayFor(modelItem => item.CID)</p>
                        <hr />
                       
                        @Html.ActionLink("進入課程", "Index", "Missions", new { cid = item.CID }, new { @class = "btn btn-primary" })
                            
                        <button type="button" class="btn btn-link p-1" onclick="location.href='@Url.Action("CourseEdit", "Teacher", new { cid = item.CID })'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="grey" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                            </svg>
                        </button>
                        <button type="button" class="btn btn-link" style="padding: 5px 5px 5px 5px" onclick="location.href='@Url.Action("CourseDelete", "Teacher", new { cid = item.CID })'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="grey" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

