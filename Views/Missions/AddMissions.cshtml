                        <input type="button" value="管理知識點" onclick="KPmanagement()" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </div>*@


        @Html.HiddenFor(model => model.CourseID, htmlAttributes: new { @value = Model.CourseID })

        <div class="mb-3">
            <div class="col">
                <input type="submit" value="儲存" class="btn btn-primary" />
                <a class="btn btn-secondary" href="@Url.Action("Index", "Missions" , new { cid = Model.CourseID })">取消</a>
</div>
        </div>
    }
</div>


