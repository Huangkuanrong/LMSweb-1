@model  LMSweb.ViewModel.MissionViewModel
@{
    ViewBag.Title = "SelectMission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header {
    @Html.Partial("../Shared/Header/HeaderNavbar")
}

<nav class="navbar navbar-expand-lg navbar-light navBG" style="border-radius: 0 0 5px 5px;">
    <div class="container">
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item ">
                    <a class="nav-link text-light active" href="@Url.Action("TeacherHomePage","Teacher")">
                        <i class="bi bi-house-door"></i>
                        回課程首頁
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-light" href="@Url.Action("Index", "Missions", new { CID = Model.CID})">任務管理</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-light active" aria-current="page" href="@Url.Action("StudentManagement", "Course", new { CID = Model.CID})">學生名單</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-light " href="@Url.Action("TeacherJourney","LearningBehaviors", new { CID = Model.CID})">學習表現</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light " href="@Url.Action("TeacherEvalutionJourney","LearningBehaviors",new {CID = Model.CID})">學習表現(互評版)</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <div class="card m-3 p-3">
        <div class="row m-2">
            <h1 class="w-auto fs-2 my-auto">@Model.CName</h1>
            @*<ol class="breadcrumb bg-white m-3">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Missions", new { CID = Model.CID})">任務列表</a></li>
                <li class="breadcrumb-item active" aria-current="page">複製任務</li>
            </ol>*@
        </div>
    </div>
    <div class="card m-3 p-4">
        <h4><b>複製任務</b></h4>
        <hr />
        @* 這邊 table 會偏左 暫時找不到原因 使用 ms-3 先作業面校正 *@
        <table id="table_id" class="table table-striped ms-3">
            <thead>
                <tr class="row w-100">
                    <th class="col-1">
                        編號
                    </th>
                    <th class="col">
                        @Html.DisplayNameFor(model => model.missions.First().Course.CName)
                    </th>
                    <th class="col">
                        @Html.DisplayNameFor(model => model.missions.First().MName)
                    </th>
                    <th class="col-3">
                        @Html.DisplayNameFor(model => model.missions.First().MDetail)
                    </th>
                    <th class="col">
                        @Html.DisplayNameFor(model => model.missions.First().Start)
                    </th>
                    <th class="col">
                        @Html.DisplayNameFor(model => model.missions.First().End)
                    </th>
                    <th class="col"></th>
                </tr>
            </thead>
            <tbody id="number">
                @foreach (var item in Model.missions)
                {
                    <tr class="row w-100">
                        <td class="col-1">
                        </td>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.Course.CName)
                        </td>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.MName)
                        </td>
                        <td class="col-3">
                            @Html.DisplayFor(modelItem => item.MDetail)
                        </td>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.Start)
                        </td>
                        <td class="col">
                            @Html.DisplayFor(modelItem => item.End)

                        </td>
                        <td class="col">
                            <a class="btn btn-primary w-auto mx-auto" onclick="location.href='@Url.Action("AddMissions", "Missions", new { mid = item.MID, cid = Model.CID})'">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus-lg" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                                </svg>
                                複製此任務
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
        window.onload = function () {
            var tableLine = document.getElementById("number");
            for (var i = 0; i < tableLine.rows.length; i++) {
                tableLine.rows[i].cells[0].innerHTML = "<span class='ms-2'></span>" + (i + 1);
            }
        }
    </script>
}