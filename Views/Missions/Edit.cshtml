<div class="container">
    <div class="card m-3 p-3">
        <div class="row m-2">
            <h1 class="w-auto fs-2 my-auto">@Model.CourseName</h1>
            <ol class="breadcrumb bg-white m-3">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Missions", new { CID = Model.CourseID})">任務列表</a></li>
                <li class="breadcrumb-item active" aria-current="page">編輯任務</li>
            </ol>
        </div>
    </div>
    <div class="card m-3 p-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal row">
                @* 編輯任務標題 *@
                <h4 class="fs-3 text-center my-1">編輯任務</h4>

                @* 任務ID 隱藏式 *@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MID)
                @Html.HiddenFor(model => model.CourseID)

                @* 任務名稱 *@
                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.Name, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextAreaFor(model => model.Name, new { @class = "form-control col-12 fs-5", rows = "1" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* 任務內容 *@
                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.Contents, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextAreaFor(model => model.Contents, new { @class = "form-control col-12 fs-5", rows = "10" })
                        @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.StartDate, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 my-1">
                    @Html.LabelFor(model => model.EndDate, new { @class = "form-label ms-2 fs-5 my-1" })
                    <div class="row mx-1">
                        @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="mb-3">
                    <div class="row">
                        <input type="submit" value="儲存" class="btn btn-primary w-auto px-5 ms-auto" />
                        <a class="btn btn-secondary w-auto px-5 ms-1 me-3" href="@Url.Action("Index", "Missions" , new { cid = Model.CourseID })">取消</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
