@model LMSweb.ViewModel.MissionCreateViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="cardArticle">
    <h4>@Model.CName</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Missions", new { CID = Model.CID})">任務列表</a></li>
            <li class="breadcrumb-item active" aria-current="page">編輯任務</li>
        </ol>
    </nav>
</div>
<div class="article">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

     <div class="form-horizontal">
         <h4><b>編輯任務</b></h4>
         <hr />
         @Html.ValidationSummary(true, "", new { @class = "text-danger" })
         @Html.HiddenFor(model => model.mission.MID)
         <div class="mb-3">
             @Html.LabelFor(model => model.mission.MName, htmlAttributes: new { @class = "control-label col-md-2" })
             <div class="col-5">
                 @Html.EditorFor(model => model.mission.MName, new { htmlAttributes = new { @class = "form-control" } })
                 @Html.ValidationMessageFor(model => model.mission.MName, "", new { @class = "text-danger" })
             </div>
         </div>
       
         <div class="mb-3">
             @Html.LabelFor(model => model.mission.MDetail, htmlAttributes: new { @class = "control-label col-md-2" })
             <div class="col-5">
                 @Html.TextAreaFor(model => model.mission.MDetail, 10, 53, new { htmlAttributes = new { @class = "form-control" } })
                 @Html.ValidationMessageFor(model => model.mission.MDetail, "", new { @class = "text-danger" })
             </div>
         </div>
         <div class="mb-3">
             @Html.LabelFor(model => model.mission.Start, htmlAttributes: new { @class = "control-label col-md-2" })
             <div class="col-5">
                 @Html.EditorFor(model => model.mission.Start, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                 @Html.ValidationMessageFor(model => model.mission.Start, "", new { @class = "text-danger" })
                 @*<div class="input-group-append" data-target="#datetimepicker_start" data-toggle="datetimepicker">
                     <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                 </div>*@
             </div>
        </div>

         <div class="mb-3">
             @Html.LabelFor(model => model.mission.End, htmlAttributes: new { @class = "control-label col-md-2" })
             <div class="col-5">
                 @Html.EditorFor(model => model.mission.End, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                 @Html.ValidationMessageFor(model => model.mission.End, "", new { @class = "text-danger" })
                 @*<div class="input-group-append" data-target="#datetimepicker_end" data-toggle="datetimepicker">
                     <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                 </div>*@
             </div>
         </div>

         <div class="mb-3">
             @Html.LabelFor(model => model.KnowledgeList, htmlAttributes: new { @class = "control-label col-md-2" })
             <div class="col-5">
                 @Html.ListBoxFor(model => model.SelectKnowledgeList, Model.KnowledgeList, htmlAttributes: new { @class = "form-control selectpicker", multiple = "", @data_live_search = "true", title = "請選擇知識點..." })
             </div>
         </div>
         
         <label class="mb-3">總成績權重調整(權重總和應等於100) : </label>
            <div class="container">

                <div class="row">
                    <div class="col">
                        <div class="row">
                            合作學習權重 :
                            <div class="col-5">
                                @Html.EditorFor(model => model.mission.discuss_k, new { htmlAttributes = new { @class = "form-control", @type = "number", @id = "mission_discuss_k" } })
                                @*<input type="number" class="form-control" id="mission_discuss_k" name="mission.discuss_k" />*@
                            </div>%
                            @Html.ValidationMessageFor(model => model.mission.discuss_k, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            個人表現權重 :
                            <div class="col-5">
                                @Html.EditorFor(model => model.mission.per_k, new { htmlAttributes = new { @class = "form-control", @type = "number", @id = "mission_per_k" } })
                                @*<input type="number" class="form-control" id="mission_per_k" name="mission.per_k" />*@
                            </div>%
                            @Html.ValidationMessageFor(model => model.mission.per_k, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col">
                        <div class="row">
                            小組成果權重 :
                            <div class="col-5">
                                @Html.EditorFor(model => model.mission.group_k, new { htmlAttributes = new { @class = "form-control", @type = "number", @id = "mission_group_k" } })
                                @*<input type="number" class="form-control"  id="mission_group_k" name="mission.group_k" />*@
                            </div>%
                            @Html.ValidationMessageFor(model => model.mission.group_k, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                
            </div>
         <div id="demo" class="text-danger"></div>
            <br />
         @Html.HiddenFor(model => model.CID, htmlAttributes: new { @value = Model.CID })
         <br />
         <div class="mb-3">
             <div class="col">
                 <input type="submit" value="儲存" class="btn btn-primary" />
                 <input type="button" value="取消" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Missions" , new { cid = Model.CID })'"/>
             </div>
         </div>
     </div>
     }
</div>
@section scripts
{
    <script>
        $("input[type='number']").change(function () {
            var discuss = parseInt($("#mission_discuss_k").val());
            var per = parseInt($("#mission_per_k").val());
            var group = parseInt($("#mission_group_k").val());
            let total = discuss + per + group;

            console.log(discuss);
            console.log(per);
            console.log(group);
            console.log(total);

            if (total != 100) {
                $("#demo").html("三個權重加起來必須是100");
            }
            else {
                $("#demo").html("");
            }

        });
    </script>
}
