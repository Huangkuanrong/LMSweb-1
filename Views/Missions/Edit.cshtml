@model LMSweb.ViewModel.MissionCreateViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light navBG" style="border-radius: 0 0 5px 5px;">
    <div class="container">
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item ">
                    <a class="nav-link text-light active" href="@Url.Action("TeacherHomePage","Teacher")">
                        <i class="bi bi-house-door"></i>
                        回課程首頁
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-light" href="@Url.Action("Index", "Missions", new { CID = Model.CID})">任務管理</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-light active" aria-current="page" href="@Url.Action("StudentManagement", "Course", new { CID = Model.CID})">學生名單</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link text-light " href="@Url.Action("TeacherJourney","LearningBehaviors", new { CID = Model.CID})">學習表現</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-light " href="@Url.Action("TeacherEvalutionJourney","LearningBehaviors",new {CID = Model.CID})">學習表現(互評版)</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <div class="card m-3 p-3">
        <div class="row m-2">
            <h1 class="w-auto fs-2 my-auto">@Model.CName</h1>
            <ol class="breadcrumb bg-white m-3">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Missions", new { CID = Model.CID})">任務列表</a></li>
                <li class="breadcrumb-item active" aria-current="page">編輯任務</li>
            </ol>
        </div>
    </div>
    <div class="card m-3 p-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal row">
                @* 編輯任務標題 *@
                <h4><b>編輯任務</b></h4>

                @* 任務ID 隱藏式 *@
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.mission.MID)

                @* 任務名稱 *@
                <div class="mb-3">
                    @Html.LabelFor(model => model.mission.MName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-5">
                        @Html.EditorFor(model => model.mission.MName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.mission.MName, "", new { @class = "text-danger" })
                    </div>
                </div>

                @* 任務內容 *@
                <div class="mb-3">
                    @Html.LabelFor(model => model.mission.MDetail, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="row w-100 pe-5 ms-1">
                        @Html.TextAreaFor(model => model.mission.MDetail, 10, 53, new { htmlAttributes = new { @class = "form-control col-12", style = "height: 100px" } })
                        @Html.ValidationMessageFor(model => model.mission.MDetail, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.mission.Start, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-5">
                        @Html.EditorFor(model => model.mission.Start, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.mission.Start, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.mission.End, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-5">
                        @Html.EditorFor(model => model.mission.End, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.mission.End, "", new { @class = "text-danger" })

                    </div>
                </div>

                @*<div class="mb-3">
                    <label> 知識點</label>
                    <div class="col-5">
                        @Html.ListBoxFor(model => model.SelectKnowledgeList, Model.KnowledgeList, htmlAttributes: new { @class = "form-control selectpicker", multiple = "", @data_live_search = "true", title = "請選擇知識點..." })
                    </div>
                </div>
                @Html.HiddenFor(model => model.CID, htmlAttributes: new { @value = Model.CID })
                <br />*@
                <div class="mb-3">
                    <div class="col">
                        <input type="submit" value="儲存" class="btn btn-primary" />
                        <input type="button" value="取消" class="btn btn-secondary" onclick="location.href='@Url.Action("Index", "Missions" , new { cid = Model.CID })'" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
