@functions {
    string GetChartDisplayClass(char input)
    {

        //0 == 還沒做
        //1 == 正在做
        //2 == 已經做完

        if (input == '0') return "step align-self-center opacity-50";
        else if (input == '1') return "step align-self-center active";
        else if (input == '2') return "step align-self-center";
        else return "step align-self-center";
    }

    string GetTypeString(int input)
    {
        if (input == 0) return "控制組";
        else if (input == 1) return "實驗組一：同儕互評";
        else if (input == 2) return "實驗組二：自我調節";
        else if (input == 3) return "實驗組三：互動式同儕互評";
        else if (input == 4) return "實驗組四：社會共享調節";
        else if (input == 5) return "實驗組五：互動式同儕互評 & 社會共享調節";
        else return "組別Type錯誤";
    }

    string GetKString(int k)
    {
        return $"{k}";
    }

    string GetChartStepDisplay(string step, string type)
    {
        return "";
    }

    string GetChartDisplay(string mode, string typeCode)
    {
        return "";
    }
}


