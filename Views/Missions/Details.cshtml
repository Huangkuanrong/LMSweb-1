                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", Model.CurrentAction, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("寫程式碼", Model.CurrentAction, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("同儕互評", Model.CurrentAction, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("評價回饋", Model.CurrentAction, k++)
                                <div class="bs-stepper-line"></div>
                                @MissionsHelper.GetTaskGuideStapString("團隊反思", Model.CurrentAction, k++)
                                break;
                            default:
                                break;
                        }
                    </div>
                </div>
            </div>
        </div>
