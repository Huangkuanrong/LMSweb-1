@model LMSweb.ViewModel.MissionViewModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<style>
    table {
        border-collapse: collapse;
        /*margin: 10px auto;*/
    }

        table tr {
            border-bottom: solid 2px #F0F0F2;
        }

    th {
        background-color: cadetblue;
        color: #F0F0F2;
        text-align: center;
        padding: 10px 0;
        width: 50%;
    }

    td {
        padding: 10px 10px;
    }

    .MissionDetailArticle {
        position: relative;
        display: block;
        box-sizing: border-box;
        width: 100%;
        max-width: 1200px;
        margin: 20px auto 20px;
        padding: 30px 0px 50px 70px;
        border-radius: 5px;
        background: #F0F0F2;
        border: 1px solid #dee2e6;
        border-color: #cdcdcd;
    }
</style>
<div class="cardArticle">
    <h4>@Model.CName</h4>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Missions", new { CID = Model.CID})">任務列表</a></li>
            <li class="breadcrumb-item active" aria-current="page">任務內容</li>
        </ol>
    </nav>
</div>
<div class="MissionDetailArticle">
    <div>
        <div class="row">
            <div class="col-8">
                <h5><b>@Html.DisplayFor(model => model.mis.MName)</b></h5>
            </div>
            <div class="col">
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index","Groups",new { mid = Model.MID, cid=Model.CID })'">
