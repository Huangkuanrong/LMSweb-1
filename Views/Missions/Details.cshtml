@model LMSweb.ViewModel.MissionDetailViewModel
 
@{
    ViewBag.Title = "Details";
    int k = 0;
}

@section NavPills {
    <ul class="nav nav-pills me-auto ms-3">
        @AllHelper.SetActiveNavData(Url.Action("Index", "Missions", new { CID = Model.CourseID }), "任務管理")
        @AllHelper.SetUnActiveNavData(Url.Action("StudentManagement", "Course", new { CID = Model.CourseID }), "學生名單")
        @AllHelper.SetUnActiveNavData(Url.Action("TeacherJourney", "LearningBehaviors", new { CID = Model.CourseID }), "學習表現")
        @AllHelper.SetUnActiveNavData(Url.Action("TeacherEvalutionJourney", "LearningBehaviors", new { CID = Model.CourseID }), "學習表現(互評版)")
    </ul>
}

@functions {
    string GetChartDisplayClass(char input)
    {

        //0 == 還沒做
        //1 == 正在做
        //2 == 已經做完

        if (input == '0') return "step align-self-center opacity-50";
        else if (input == '1') return "step align-self-center active";
        else if (input == '2') return "step align-self-center";
        else return "step align-self-center";
    }

    string GetKString(int k)
    {
        return $"{k}";
    }
}


<div class="container">

    @AllHelper.CouresTitleForTeacherView(Model.CourseName, Model.TestType)

    <div class="row m-3" style="min-height: 80vh">
        <div class="col card me-2 p-3 bg-white">
            <div class="shadow-sm">
                <h3 class="text-center mt-2 pt-1">任務進度</h3>

                <div id="stepper4" class="bs-stepper vertical">
                    <div class="bs-stepper-header w-100 pb-3" role="tablist">

                        @switch (Model.TestType)
                        {
                            case 0:
                                @MissionsHelper.GetTaskGuideStapString("畫流程圖", Model.CurrentAction, k++)
