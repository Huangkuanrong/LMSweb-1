                    </svg>
                    學生作業
                </button>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", "Missions", new {  mid = Model.MID, cid = Model.CID})'">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                    </svg>
                    編輯任務內容
                </button>
            </div>
        </div>
        
        <br />
        <table>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.mis.MDetail)
                </th>
                <td>
                    @Html.DisplayFor(model => model.mis.MDetail)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.mis.Start)
                </th>
                <td>
                    @Html.DisplayFor(model => model.mis.Start)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.mis.End)
                </th>
                <td>
                    @Html.DisplayFor(model => model.mis.End)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.mis.relatedKP)
                </th>
                <td>
                    @foreach (var kp in Model.KContents)
                    {
                        @kp
                        <br>
                    }
                </td>
            </tr>
        </table>
        <br />
        <div class="mb-3">
            後設認知開啟/關閉 : 
            @if (Model.mis.AddMetacognition)  //true
            {
                <button type="button" class="btn btn-primary" id="is_AddMeta">後設認知狀態 : 開啟</button>
            }
            else   //false
            {
                <button type="button" class="btn btn-secondary" id="is_AddMeta">後設認知狀態 : 關閉</button>
            }
        </div>
        <div class="mb-3">
            題目設置 :
            <button type="button" class="btn btn-outline-dark" id="question" onclick="location.href='@Url.Action("Index","Questions",new { mid = Model.MID, cid=Model.CID })'">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                </svg>
                後設認知題目
            </button>
            <button type="button" class="btn btn-outline-dark" onclick="location.href='@Url.Action("PersonalAbility","Questions",new { mid = Model.MID, cid=Model.CID })'">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-card-list" viewBox="0 0 16 16">
                    <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                    <path d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm-1-5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zM4 8a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0zm0 2.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0z" />
                </svg>
                自評互評題目
            </button>
        </div>
        <div class="mb-3">
            功能開啟/關閉 :
            @if (Model.mis.AddMetacognition)
            {
                if (Model.mis.IsGoalSetting)
                {
                    <button type="button" class="btn btn-primary" id="is_Goalsetting">目標設定狀態 : 開啟</button>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" id="is_Goalsetting">目標設定狀態 : 關閉</button>
                }
            }
            else
            {
                <button type="button" class="btn btn-primary" id="is_Goalsetting" hidden>目標設定狀態 : 開啟</button>
            }

            @if (Model.mis.IsDiscuss)
            {
                <button type="button" class="btn btn-primary" id="is_Discuss">討論區狀態 : 開啟</button>
            }
            else
            {
                <button type="button" class="btn btn-secondary" id="is_Discuss">討論區狀態 : 關閉</button>
            }
            @if (Model.mis.IsDrawing)
            {
                <button type="button" class="btn btn-primary" id="is_Drawing">流程圖狀態 : 開啟</button>
            }
            else
            {
                <button type="button" class="btn btn-secondary" id="is_Drawing">流程圖狀態 : 關閉</button>
            }
            @if (Model.mis.IsCoding)
            {
                <button type="button" class="btn btn-primary" id="is_Coding">程式碼狀態 : 開啟</button>
            }
            else
            {
                <button type="button" class="btn btn-secondary" id="is_Coding">程式碼狀態 : 關閉</button>
            }
            @if (Model.mis.IsAssess)
            {
                <button type="button" class="btn btn-primary" id="is_Assess">評價狀態 : 開啟</button>
            }
            else
            {
                <button type="button" class="btn btn-secondary" id="is_Assess">評價狀態 : 關閉</button>
            }
            @if (Model.mis.AddMetacognition)
            {
                if (Model.mis.IsReflect)
                {
                    <button type="button" class="btn btn-primary" id="is_Reflect">自我反思狀態 : 開啟</button>
                }
                else
                {
                    <button type="button" class="btn btn-secondary" id="is_Reflect">自我反思狀態 : 關閉</button>
                }
            }
            else
            {
                <button type="button" class="btn btn-secondary" id="is_Reflect" hidden>自我反思狀態 : 關閉</button>
            }

        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $("#is_Drawing").click(function () {
            var data = {};
            data['mid'] = '@Model.MID';
            data['cid'] = '@Model.CID';
            data['type'] = "is_Drawing";
            data['sw'] = $("#is_Drawing").text().trim() == "流程圖狀態 : 關閉" ? true : false;
            //console.log(data);
            $.ajax({
                url: '@Url.Action("SwitchDrawing")',
                type: 'post',
                dataType: 'json',
                data: data,
                success: function (response_data) {
                    // ... do something with the data...
                    console.log(response_data);
                    if (response_data['Status'] == 200) {
                        $("#is_Drawing").removeClass();

                        if (response_data['sw'] == false) {
                            $("#is_Drawing").text("流程圖狀態 : 關閉");
                            $("#is_Drawing").addClass("btn btn-secondary");

                        } else {
                            $("#is_Drawing").text("流程圖狀態 : 開啟");
