@model LMSweb.ViewModel.GroupViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="article">
    <h2>Index</h2>
    @if (Model.Groups.Count == 0)
    {
        <p>目前還沒有新增組別哦</p>
    }
    else
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Groups[0].GName)
                </th>
                <th>
                    @*@Html.DisplayNameFor(model => model)*@
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Groups)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.GName)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item)*@
                    </td>
                    <td>
                        @foreach (var ta in item.TeacherA)
                        {
                            if (ta.MID == Model.MID)
                            {
                                @item.TeacherA.Count
                                @ta.GroupAchievementScore
                                @ta.TeacherA
                                <br />
                            }
                        }
                    </td>

                    <td>
                        @Html.ActionLink("評分", "Assessment", new { gid = item.GID, mid = Model.MID})
                    </td>
                </tr>
            }

        </table>
    }

</div>
