@model LMSweb.ViewModel.CourseViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_WindowLayoutPage.cshtml";
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        
    </style>

</head>
<body>
    <div class="article">
        <h4>@(Model.CName)</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" active" aria-current="page">知識點列表</li>
            </ol>
        </nav>
        <div class="col-2">
            <input type="button" value="新增知識點"class="btn btn-primary" onclick="location.href='@Url.Action("Create", "KnowledgePoints", new { cid = Model.CID })'"/>
        </div>
        <table class="table">
            <tr>
                <th>
                    知識點
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model.kps)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KContent)
                    </td>

                    <td>
                        @Html.ActionLink("編輯", "Edit", "KnowledgePoints", new { kid = item.KID }, null) |
                        @Html.ActionLink("刪除", "Delete", "KnowledgePoints", new { kid = item.KID }, null)
                    </td>
                </tr>
            }

        </table>
        <hr />
        @Html.HiddenFor(model => model.CID, htmlAttributes: new { @value = Model.CID })
        @*<p>
            @Html.ActionLink("新增知識點", "Create", "KnowledgePoints", new { cid = Model.CID }, null) |
            @Html.ActionLink("編輯", "Edit", new { cid = Model.CID }) |
            @Html.ActionLink("返回", "Index")
        </p>*@

    </div>
</body>

